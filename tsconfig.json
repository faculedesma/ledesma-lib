{
  "compilerOptions": {
    "target": "ES5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "baseUrl": "./src"
  },
  "include": ["**/*.ts", "**/*.tsx", "test"],
  "exclude": ["node_modules", "dist"]
}
